@model Blog_GreenFluffyBites.Models.Comment

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    <fieldset class="form-horizontal">
        <legend>Comment</legend>
        <div class="control-group">
            @Html.LabelFor(model => model.content, new { @class = "control-label" })
            <div class="controls">
                @Html.EditorFor(model => model.content)
                @Html.ValidationMessageFor(model => model.content, null, new { @class = "help-inline" })
            </div>
        </div>
        <div class="form-actions no-color">
            <input type="submit" value="Save" class="btn btn-success" />
            @Html.ActionLink("Cancel", "Details", "Article", new { id = Model.ArticleId }, new { @class = "btn btn-default" })
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}